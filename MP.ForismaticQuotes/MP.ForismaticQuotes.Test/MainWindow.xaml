<Window
    x:Class="MP.ForismaticQuotes.Test.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MP.ForismaticQuotes.Test"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="20,20,20,20" Orientation="Vertical">
            <Button
                Width="100"
                Height="40"
                Margin="10,10,10,10"
                HorizontalAlignment="Left"
                Command="{Binding GetQuoteCmd}"
                Content="Get Quote" />
            <TextBlock
                Height="20"
                Margin="5,5,5,5"
                Text="Quote" />
            <TextBox
                MinHeight="40"
                MaxHeight="120"
                Margin="5,5,5,5"
                Text="{Binding QuoteText}"
                TextWrapping="Wrap" />
            <TextBlock
                Height="20"
                Margin="5,5,5,5"
                Text="Author" />
            <TextBox
                Width="200"
                Height="40"
                Margin="5,5,5,5"
                HorizontalAlignment="Left"
                Text="{Binding QuoteAuthor}" />
        </StackPanel>
    </Grid>
</Window>